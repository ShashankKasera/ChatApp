<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userTextV"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hallo mayank"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginRight="100dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:fontFamily="@font/aver"
        android:textStyle="bold"
        android:background="@drawable/message_backgraund"/>

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bleck"
        android:layout_marginLeft="15dp"
        android:id="@+id/userImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/account" />


    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bleck"
        android:layout_marginRight="15dp"
        android:id="@+id/currentuserImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/account"
        android:layout_gravity="right"/>


    <TextView
        android:id="@+id/currentuserTextV"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hallo mayank"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="100dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/aver"
        android:textStyle="bold"
        android:background="@drawable/currentusermessage"/>


</LinearLayout>